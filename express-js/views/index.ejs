<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
        <h1>All blogs</h1>
        <% if(blogs.length>0){ %>
            <% blogs.forEach(blog => { %>
                        <h2 class="title"><%= blog.title %></h2>
                        <p class="snippet"><%= blog.snippet %></p>
            <% }) %>
       <% } else { %>
            <h2> No blogs yet </h2>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>

</body>
</html>